{% extends 'base.html.twig' %}

{% block title %}{{ 'title.record_view'|trans }} {{ task.id }}{% endblock %}

{% block body %}



    {% if task is defined %}
        <h3>{{ 'label.id'|trans }}: {{ task.id }}</h3>
        <h3>Tytu≈Ç</h3>
        <p>{{ task.title }}</p>
        <h3>Komentarz</h3>
        <p>{{ task.comment|markdown_to_html }}</p>
        <h3>{{ 'label.created_at'|trans }}</h3>
        <p>{{ task.createdAt|date('Y-m-d') }}</p>
        <h3>{{ 'label.updated_at'|trans }}</h3>
        <p>{{ task.updatedAt|date('Y-m-d') }}</p>
        <h3>{{ 'label.category'|trans }}</h3>
        <p>{{ task.category.title }}</p>
        <a href="{{ url('task_index') }}" title="{{ 'action.back_to_list'|trans }}">
            {{ 'action.back_to_list'|trans }}
        </a>
    {% else %}
        <p>{{ 'message.record_not_exist'|trans }}</p>
    {%  endif %}

{% endblock %}